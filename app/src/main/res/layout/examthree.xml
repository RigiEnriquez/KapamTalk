<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <!-- Top App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/nav_bar_color_default"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/arrow_back"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/antic"
                android:text="Quiz 3: Common Phrases"
                android:textColor="@android:color/white"
                android:textSize="20sp" />


        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Loading Progress Bar - Added for dynamic item loading -->
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:indeterminateTint="@color/nav_bar_color_default"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/examContentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Introduction Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/vertical_lines_border"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/aldrich"
                            android:text="Pronunciation Challenge"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/resetButton"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Reset Progress"
                            android:textSize="12sp"
                            android:fontFamily="@font/antic"
                            android:background="@drawable/greeting_item"
                            android:textColor="@color/nav_bar_color_default"
                            android:stateListAnimator="@null"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/antic"
                        android:text="Translate the English phrases to Kapampangan and pronounce them correctly to progress. After completion, you'll be able to review the correct translations."
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Current Question Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/vertical_lines_border"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/aldrich"
                            android:text="Current Phrase"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/questionNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/antic"
                            android:text="1/5"
                            android:textColor="@color/nav_bar_color_default"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Completion checkmark next to question number -->
                        <ImageView
                            android:id="@+id/completionCheckMark"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_check_circle"
                            android:visibility="gone"
                            app:tint="@color/nav_bar_color_default" />
                    </LinearLayout>

                    <!-- English Phrase -->
                    <TextView
                        android:id="@+id/tvPhraseToPronounce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/antic"
                        android:gravity="center"
                        android:text="How much is this?"
                        android:textColor="@color/nav_bar_color_default"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <!-- Translation Instructions -->
                    <TextView
                        android:id="@+id/tvPhraseMeaning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="@font/antic"
                        android:gravity="center"
                        android:text="(Translate and pronounce in Kapampangan)"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="italic" />

                    <!-- Listen to Pronunciation Button -->
                    <Button
                        android:id="@+id/btnListen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/greeting_item"
                        android:drawableStart="@drawable/speaker"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/antic"
                        android:gravity="center"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:stateListAnimator="@null"
                        android:text="Listen to Pronunciation"
                        android:textColor="@color/nav_bar_color_default" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Pronunciation Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/vertical_lines_border"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aldrich"
                        android:text="Your Turn"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Record button container -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabRecord"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/nav_bar_color_default"
                            android:contentDescription="Record your translation in Kapampangan"
                            android:src="@drawable/mic"
                            android:stateListAnimator="@null"
                            app:elevation="0dp"
                            app:fabCustomSize="72dp"
                            app:maxImageSize="36dp"
                            app:tint="@android:color/white" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvRecordingInstructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/antic"
                        android:gravity="center"
                        android:text="Tap and hold to record your Kapampangan translation"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <!-- Feedback text (initially hidden) -->
                    <TextView
                        android:id="@+id/tvFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/antic"
                        android:gravity="center"
                        android:text="Great translation and pronunciation!"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Progress Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/vertical_lines_border"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/aldrich"
                        android:text="Your Progress"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progressIndicator"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:progressTint="@color/nav_bar_color_default" />

                    <TextView
                        android:id="@+id/progressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/antic"
                        android:text="0/5 Phrases Completed"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>